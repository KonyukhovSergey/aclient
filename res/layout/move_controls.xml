<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp" >

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_button"
            android:clickable="false"
            android:src="@drawable/button_move_forward_left" />

        <ImageButton
            android:id="@+id/button_move_forward"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_button"
            android:src="@drawable/button_move_forward" />

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="@drawable/selector_button"
            android:clickable="false"
            android:src="@drawable/button_move_forward_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp" >

        <ImageButton
            android:id="@+id/button_rotate_left"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_button"
            android:src="@drawable/button_rotate_left" />

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_button"
            android:clickable="false"
            android:src="@drawable/button_action" />

        <ImageButton
            android:id="@+id/button_rotate_right"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="@drawable/selector_button"
            android:src="@drawable/button_rotate_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_button"
            android:clickable="false"
            android:src="@drawable/button_move_backward_left" />

        <ImageButton
            android:id="@+id/button_move_backward"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_button"
            android:src="@drawable/button_move_backward" />

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="@drawable/selector_button"
            android:clickable="false"
            android:src="@drawable/button_move_backward_right" />
    </LinearLayout>

</LinearLayout>